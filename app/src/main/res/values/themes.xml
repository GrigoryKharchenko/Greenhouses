<resources>
    <!-- Base application theme. -->
    <style name="Theme.Greenhouses" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text" />

    <style name="Text.Black">
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="Text.Black.14">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.Black.16">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Black.20">
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/sp_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/gray_alfa_30</item>
    </style>

    <style name="TitleToolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
    </style>

    <style name="TitleToolbar.TextBlack">
        <item name="titleTextColor">@color/black_text_color</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>
